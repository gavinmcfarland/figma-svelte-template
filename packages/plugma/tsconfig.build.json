{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": ["DOM", "esnext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "types": ["@figma/plugin-typings"],
    "baseUrl": "src",
    "paths": {
      "#core": ["core/index.ts"],
      "#core/*": ["core/*"],
      "#commands": ["commands/index.ts"],
      "#commands/*": ["commands/*"],
      "#tasks": ["tasks/index.ts"],
      "#tasks/*": ["tasks/*"],
      "#utils": ["utils/index.ts"],
      "#utils/*": ["utils/*"],
      "#vite-plugins": ["vite-plugins/index.ts"],
      "#vite-plugins/*": ["vite-plugins/*"],
      "#tests/*": ["../tests/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "archive",
    "dist",
    "node_modules",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**"
  ]
}
